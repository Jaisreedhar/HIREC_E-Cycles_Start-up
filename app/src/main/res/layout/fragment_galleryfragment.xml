                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"/>


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_gravity="right"
                    android:scaleType="fitStart"
